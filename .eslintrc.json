{
    "env": {
      "browser": true,
      "commonjs": true,
      "es6": true,
      "node": true
    },
    "extends": ["eslint:recommended", "plugin:react/recommended", "prettier"],
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "plugins": ["react"],
    "rules": {
      "indent": [
        "error",
        2,
        {
          "SwitchCase": 1,
          "flatTernaryExpressions": true,
          "offsetTernaryExpressions": true
        }
      ],
      "semi": ["error", "never"],
      "react/prop-types": 0,
      "no-var": 1,
      "no-self-compare": "error",
      "quotes": [2, "double", "avoid-escape"]
    }
  }
  